<!DOCTYPE html>
<html>
  <head>
    <title>ΑΣΦ Budget Report</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
    <script src='/javascripts/angular.js'></script>
    <script src='/javascripts/angularApp.js'></script>
  </head>
  <body ng-app='asp-budget' ng-controller='mainCtrl'>
    <div id='nav'>
        <div class='title'>ΑΣΦ - Rho Colony</div>
        <div class='right'>
            <a id='editUsers' ng-show="authorized()" href='/users'>Edit Users</a>
            <a id='editBudget' ng-show="authorized()" href='/budget'>Edit Budget</a>
            <a id='logout' href='/logout'>Logout</a>
        </div>
    </div>

    <div id='main'>
      <div id='graph'>
      </div>
      <div id='transactions'>
        <h1 class='title'>Transactions</h1>
        <table style='width:100%' ng-show='transactions.length > 0'>
          <tr>
            <th id='date'>Date</th>
            <th id='cost'>Cost</th>
            <th id='position'>Position</th>
            <th id='description'>Description</th>
          </tr>
          <tr ng-repeat='transaction in transactions'>
            <td>{{transaction.date}}</td>
            <td>${{transaction.cost}}</td>
            <td>{{transaction.position}}</td>
            <td>{{transaction.description}}</td>
          </tr>
        </table>
        <p id='noTrans' ng-show='transactions.length == 0'>Nothing has been spent yet!</p>
      </div>
    </div>
  </body>
</html>
